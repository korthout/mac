[core]
	editor = nvim
[gpg]
	program = /opt/homebrew/bin/gpg
[commit]
	gpgsign = true
[push]
	autoSetupRemote = true
[alias]
	a = add
	c = commit
	ca = commit --amend
	cfu = commit --fixup
	cm = checkout main
	d = diff
	dca = diff --cached
	f = fetch
	fa = fetch --all --prune
	ff = fetch --all --prune --prune-tags --force
	l = log --oneline --graph
	la = log --oneline --graph --all
	p = push
	pf = push --force
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rbia = rebase --interactive --autosquash
	rh = reset
	rhh = reset --hard
	sh = show
	st = status
	swc = switch --create
	up = pull --rebase
