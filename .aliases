# vim: set filetype=zsh: 

alias aliases='vim $HOME/.aliases'
alias config='git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Load Git aliases under g<alias> https://gist.github.com/mwhite/6887990
for al in `git --list-cmds=alias`; do
    alias g$al="git $al"
done

alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias cdc='cd $HOME/gh/camunda'
alias cdz='cd $HOME/gh/camunda/zeebe'
alias cdk='cd $HOME/gh/korthout'
alias cdba='cd $HOME/gh/korthout/backport-action'

alias lsa='ls -lah'
alias l='ls -lah'
alias ll='ls -lh'
alias la='ls -lAh'

alias v='vim'
alias vim='nvim'

alias mvncom='mvnd compile -DskipChecks'
alias mvncomp='mvncom'
alias mvncist='mvnd clean install -DskipTests'
alias mvncists='mvncist -DskipChecks -Djacoco.skip'
alias mvnt='mvnd test -DforkCount=4'
